[
  {
    "name": "timeslots",
    "bsonType": "object",
    "required": ["tdate","start","end","dj"],
    "properties": {
      "tdate": {
        "bsonType": "string",
        "description": "Date of timeslot, yyyy-mm-dd"
      },
      "start": {
        "bsonType": "string",
        "description": "Start time, format = HH:MM (military time)"
      },
      "end": {
        "bsonType": "string",
        "description": "End time, format = HH:MM (military time)"
      },
      "dj": {
        "bsonType": "objectId",
        "description": "Dj for this timeslot"
      }
    }
  },
  {
    "name": "djs",
    "bsonType": "object",
    "required": ["name"],
    "properties": {
      "name": {
        "bsonType": "string",
        "description": "Name of the DJ"
      },
      "experience": {
        "bsonType": "string",
        "description": "Experience of the DJ"
      },
      "availability": {
        "bsonType": "string",
        "description": "Availability of the DJ"
      }
    }
  },
  {
    "name": "songs",
    "bsonType": "object",
    "required": ["title","artist"],
    "properties": {
      "title": {
        "bsonType": "string",
        "description": "Title of the song"
      },
      "artist": {
        "bsonType": "string",
        "description": "Artist of the song"
      }
    }
  },
  {
    "name": "playlists",
    "bsonType": "object",
    "required": ["name","dj", "producer_created"],
    "properties": {
      "name": {
        "bsonType": "string",
        "description": "Name of the playlist"
      },
      "dj": {
        "bsonType": "objectId",
        "description": "Original owner of this playlist"
      },
      "songs": {
        "bsonType": "array",
        "description": "List of IDs for songs in the playlist",
        "items": {
          "bsonType": "object",
          "required": ["song"],
          "properties": {
            "_id": {
              "bsonType": "objectId",
              "description": "ID of the song"
            }
          }
        }
      },
      "producer_created": {
        "bsonType": "bool",
        "description": "Whether the producer created this playlist"
      }
    }
  },
  {
    "name": "timeslot_playlists",
    "bsonType": "object",
    "required": ["timeslot","playlist"],
    "properties": {
      "timeslot": {
        "bsonType": "objectId",
        "description": "Timeslot for which the playlist is scheduled",
        "unique": true
      },
      "playlist": {
        "bsonType": "objectId",
        "description": "Playlist to be played during the timeslot"
      }
    }
  },
  {
    "name": "notes",
    "bsonType": "object",
    "required": ["pdate", "comment", "prod"],
    "properties": {
      "pdate": {
        "bsonType": "string",
        "description": "Date for the note, format = yyyy-mm-dd"
      },
      "comment": {
        "bsonType": "string",
        "description": "Comments about the day"
      }, 
      "prod": {
        "bsonType": "string",
        "description": "Name of the producer leaving the note"
      }
    }
  },
  {
    "name": "podcasts",
    "bsonType": "object",
    "required": ["name", "episode", "duration"],
    "properties": {
      "name": {
        "bsonType": "string",
        "description": "Name of the podcast"
      },
      "episode": {
        "bsonType": "string",
        "description": "Episode of the podcast"
      },
      "duration": {
        "bsonType": "string",
        "description": "Duration of the podcast episode"
      }
    }
  }
]
