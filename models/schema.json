[
  {
    "name": "timeslots",
    "bsonType": "object",
    "required": ["start", "end", "dj"],
    "properties": {
      "start": {
        "bsonType": "date",
        "description": "Start time of the timeslot"
      },
      "end": {
        "bsonType": "date",
        "description": "End time of the timeslot"
      },
      "dj": {
        "bsonType": "objectId",
        "description": "Dj for this timeslot"
      }
    }
  },
  {
    "name": "djs",
    "bsonType": "object",
    "required": ["name"],
    "properties": {
      "name": {
        "bsonType": "string",
        "description": "Name of the DJ"
      }
    }
  },
  {
    "name": "songs",
    "bsonType": "object",
    "required": ["title", "artist"],
    "properties": {
      "title": {
        "bsonType": "string",
        "description": "Title of the song"
      },
      "artist": {
        "bsonType": "string",
        "description": "Artist of the song"
      }
    }
  },
  {
    "name": "playlists",
    "bsonType": "object",
    "required": ["name", "dj"],
    "properties": {
      "name": {
        "bsonType": "string",
        "description": "Name of the playlist"
      },
      "dj": {
        "bsonType": "objectId",
        "description": "Original owner of this playlist"
      },
      "songs": {
        "bsonType": "array",
        "description": "List of IDs for songs in the playlist",
        "items": {
          "bsonType": "object",
          "required": ["song", "producer_created"],
          "properties": {
            "song": {
              "bsonType": "objectId",
              "description": "ID of the song"
            },
            "producer_created": {
              "bsonType": "bool",
              "description": "Whether the producer created this song"
            }
          }
        }
      }
    }
  },
  {
    "name": "timeslot_playlists",
    "bsonType": "object",
    "required": ["timeslot", "playlist"],
    "properties": {
      "timeslot": {
        "bsonType": "objectId",
        "description": "Timeslot for which the playlist is scheduled",
        "unique": true
      },
      "playlist": {
        "bsonType": "objectId",
        "description": "Playlist to be played during the timeslot"
      }
    }
  }
]
